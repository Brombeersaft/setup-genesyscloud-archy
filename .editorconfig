# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
# Set default charset
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

# Tab indentation (no size specified)
[*.{js,json,ts}]
indent_style = tab

# 2 space indentation
[*.{yml,yaml}]
indent_size = 2
indent_style = space
